<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.todo_list">
        <div class="m-2 border row">
            <input t-on-keyup="addTodo" placeholder="Enter a new task" t-model="input.value" t-ref="todo_input"/>
            <t t-foreach="this.todos" t-as="i" t-key="i.id">
                <TodoItem todo="i" onDelete.bind="removeTodo"/>
            </t>
        </div>
    </t>
</templates>
